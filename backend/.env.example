# Backend environment template

APP_ENV=development
BACKEND_PORT=8000

# Local Postgres (host machine)
DATABASE_URL_LOCAL=postgresql+psycopg2://construction_user:securepassword@localhost:5433/construction_db

# Docker / production-style Postgres
DATABASE_URL_DOCKER=postgresql+psycopg2://construction_user:securepassword@db:5432/construction_db

